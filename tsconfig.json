{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "stripInternal": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "outDir": "dist",
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.test.ts", "./helpers/**/*", "./tools/**/*", "./node_modules"]
}
